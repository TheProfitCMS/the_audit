<h1>Listing audits</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Obj</th>
      <th>Controller / Action</th>
      <th>Ip</th>
      <th>Fullpath</th>
      <th>Referer</th>
      <th>User agent</th>
      <th>Remote addr</th>
      <th>Data</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @audits.each do |audit| %>
      <tr>
        <td><%= audit.user_id.nil? ? 'Guest' : audit.user_id %></td>
        <td><%= link_to audit.obj_type, send("#{audit.obj_type.downcase}_path", audit.obj_id) unless ( audit.obj_id.blank? || audit.obj_type.blank? ) %></td>
        <td><%= "#{audit.controller_name} / #{audit.action_name}" %></td>
        <td><%= audit.ip %></td>
        <td><%= audit.fullpath %></td>
        <td><%= audit.referer %></td>
        <td><span title="<%= audit.user_agent %>"><%= truncate(audit.user_agent, length: 10) %></td>
        <td><%= audit.remote_addr %></td>
        <td><%= audit.data %></td>
        <td><%= link_to 'Show', audit %></td>
        <td><%= link_to 'Edit', edit_audit_path(audit) %></td>
        <td><%= link_to 'Destroy', audit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

